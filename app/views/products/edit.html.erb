<%= link_to 'Back', dashboard_path, class: "btn btn-primary pull-right" %>

<div class="container">
  <h2>Modify product</h2>
  <%= form_for @product, local: true do |form| %>

  <% if @product.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@product.errors.count, "error") %> prohibited
      this product from being saved:
    </h2>
    <ul>
      <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  <div class="form-group">
    <label for="product_name">Product name:</label>
    <%= form.text_field :name, class: "form-control"%>
  </div>

  <div class="form-group">
    <label for="cost_price">Cost price:</label>
    <%= form.text_field :cost_price, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="discount">Discount:</label>
    <%= form.text_field :discount, class: "form-control" %>
  </div>

  <div class="form-group">
    <label for="product_type">Product type:</label>
    <%= form.select :product_type, options_for_select(ProductType.by_active.collect{ |p| [p.name] }),{},{ class: "form-control" }%>
  </div>
  
  <%= form.submit 'Save Product', class: "btn btn-primary" %>
  <% end %>
</div>